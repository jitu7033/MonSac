<%- include('./partials/header') %>

<% if(error.length > 0) { %>
    <div class="fixed top-5 left-1/2 transform -translate-x-1/2 bg-red-500 px-4 py-2 rounded shadow z-50">
        <span class="text-white font-medium"><%= error %></span>
    </div>
<% } %>

<div class="min-h-screen flex flex-col lg:flex-row px-6 md:px-20 py-10 gap-10">
    
    <!-- Register Section -->
    <div class="w-full lg:w-1/2 flex items-center justify-center">
        <div class="w-full max-w-lg">
            <h3 class="text-3xl md:text-4xl mb-2">Welcome to <span class="text-blue-500 font-semibold">Scatch</span></h3>
            <h4 class="text-xl md:text-2xl mb-6">Create your account</h4>
            <form autocomplete="off" action="/users/register" method="post">
                <input class="bg-zinc-100 block w-full px-4 py-3 border rounded-md mb-4 border-zinc-300"
                    type="text" placeholder="Full Name" name="fullname">
                <input class="bg-zinc-100 block w-full px-4 py-3 border rounded-md mb-4 border-zinc-300"
                    type="email" placeholder="Email" name="email">
                <input class="bg-zinc-100 block w-full px-4 py-3 border rounded-md mb-4 border-zinc-300"
                    type="password" placeholder="Password" name="password">
                <input class="px-6 py-3 mt-2 bg-blue-500 text-white rounded-full w-full font-medium hover:bg-blue-600 transition"
                    type="submit" value="Create My Account">
            </form>
        </div>
    </div>

    <!-- Login Section -->
    <div class="w-full lg:w-1/2 flex items-center justify-center">
        <div class="w-full max-w-lg">
            <h4 class="text-xl md:text-2xl mb-6 capitalize">Login to your account</h4>
            <form autocomplete="off" action="/users/login" method="post">
                <input class="bg-zinc-100 block w-full px-4 py-3 border rounded-md mb-4 border-zinc-300"
                    type="email" placeholder="Email" name="email">
                <input class="bg-zinc-100 block w-full px-4 py-3 border rounded-md mb-4 border-zinc-300"
                    type="password" placeholder="Password" name="password">
                <input class="px-6 py-3 mt-2 bg-blue-500 text-white rounded-full w-full font-medium hover:bg-blue-600 transition"
                    type="submit" value="Login">
            </form>
        </div>
    </div>

</div>

<%- include('./partials/footer') %>
